<!DOCTYPE html>
<html lang="en">
<head>
    {% block head %}
        <title>Document</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="../../App/layndon/css/admin.css">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js"></script>
    {% endblock %}
</head>
<body>
<div class="container">
    <div class="row {# align-items-center #}">
        <div style="background-color:red" class="col-8">
            {% block list_films %}{% endblock %}
        </div>
        <div style="background-color:blue" class="col-4">
        <form class="form-signin" method="post" action="{{ path_for ('add-film') }}">
            <img id="logo" src="../../App/layndon/img/cine.jpg">
            <h2 class="form-signin-heading">LAYNDON</h2>
            <label for="inputFilm" class="sr-only">Pelicula</label>
            <input id="inputFilm" name= "film" class="form-control" placeholder="Titulo Pelicula (en ingles)" required="" autofocus="" type="text">
            <label for="inputDateFilm" class="sr-only">Fecha</label>
            <input id="inputDateFilm" name= "date-film" class="form-control" placeholder="Fecha de exposición" autofocus="" type="text">
            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Añadir">
        </form> 
        </div>
        <div style="background-color:green" class="col-3">VOTACIONES</div>
    </div>  
 
  </div>
</body>
</html>