{% extends 'master.twig' %}

{% block css %}
        <link rel="stylesheet" type="text/css" href="../../App/layndon/css/films.css">
{% endblock %}

{% block list_films %}
<div class="container mt-5">
    <div id="films" class="row d-flex justify-content-around">
        {% if films is not empty %}
     
	        {% for film in films %}
			    <div id="{{film.id_film}}" class="" title="{{film.title}}">
			        <a href="{{ path_for ('details-film',{'id': film.id_film}) }}"></a>
			        	<img id='poster' src= {{film.image}} class="" width='200' height="300">
			        <p id="date-film" class="text-center display-4 text-info font-italic">{{film.date}}</p>
			    </div>
	        {% endfor %}
        {% endif %}
    </div>
</div>
{% endblock %}

{% block js %}

<script type="text/javascript" src="../../App/layndon/js/user/details-film.js"></script>

{% endblock %}