<!DOCTYPE html>
<html lang="en">
<head>
        <title>Document</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        {% block css %}
        {% endblock %}

        <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark container">
        <a class="navbar-brand" href="{{ path_for('home')}}">LAYNDON</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="{{ path_for('films')}}">PELICULAS</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path_for('contact')}}">CONTACTO</a>
              </li>
            </ul>
                {% if session == 'admin' %}

                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item">
                                <a class="nav-link" href="{{ path_for('admin') }}">ADMIN</a>
                        </li>
                        <li class="nav-item">
                                <a class="nav-link" href="{{ path_for('log-out') }}">LOG OUT</a>
                        </li>
                    </ul>
                {% endif %}
        </div>
    </nav>              

    {% block history %}{% endblock %}

    {% block admin %}{% endblock %}

    {% block user %}{% endblock %}

    {% block list_films %}{% endblock %}

    {% block film %}{% endblock %}

    {% block contact %}{% endblock %}
        
    <footer class="footer container">
        <div class="row bg-dark">
                <div class="col-md-11 col-9 d-flex justify-content-center align-items-center">
                    <p class="author text-white font-weight-light font-italic mb-0">&copy Creado por David Ignacio Martos</p>
                </div>
                <div class="social-button col-md-1 col-3 d-flex justify-content-end">
                    <a href="https://www.facebook.com" class="fa fa-2x fa-facebook-square mr-1"></a>
                    <a href="https://www.twitter.com" class="fa fa-2x fa-twitter-square"></a>
                </div>
        </div>          
    </footer>

    {% block js %}
    {% endblock %}
</body>
</html>
